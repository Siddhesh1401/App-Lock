<?xml version="1.0" encoding="utf-8"?>
<androidx.constraintlayout.widget.ConstraintLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    android:layout_width="match_parent"
    android:layout_height="match_parent">

    <TextView
        android:id="@+id/pinDisplay"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:text="○○○○"
        android:textSize="32sp"
        android:textStyle="bold"
        android:letterSpacing="0.3"
        android:layout_marginBottom="32dp"
        app:layout_constraintTop_toTopOf="parent"
        app:layout_constraintLeft_toLeftOf="parent"
        app:layout_constraintRight_toRightOf="parent"
        app:layout_constraintBottom_toTopOf="@id/keypadGrid" />

    <androidx.constraintlayout.widget.ConstraintLayout
        android:id="@+id/keypadGrid"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        app:layout_constraintTop_toBottomOf="@id/pinDisplay"
        app:layout_constraintBottom_toBottomOf="parent"
        app:layout_constraintLeft_toLeftOf="parent"
        app:layout_constraintRight_toRightOf="parent">

        <!-- Row 1 -->
        <com.google.android.material.button.MaterialButton
            android:id="@+id/btn1"
            style="@style/Widget.Material3.Button.TonalButton"
            android:layout_width="72dp"
            android:layout_height="72dp"
            android:text="1"
            android:textSize="24sp"
            app:cornerRadius="36dp"
            app:layout_constraintTop_toTopOf="parent"
            app:layout_constraintStart_toStartOf="parent" />

        <com.google.android.material.button.MaterialButton
            android:id="@+id/btn2"
            style="@style/Widget.Material3.Button.TonalButton"
            android:layout_width="72dp"
            android:layout_height="72dp"
            android:text="2"
            android:textSize="24sp"
            android:layout_marginStart="16dp"
            app:cornerRadius="36dp"
            app:layout_constraintTop_toTopOf="@id/btn1"
            app:layout_constraintStart_toEndOf="@id/btn1" />

        <com.google.android.material.button.MaterialButton
            android:id="@+id/btn3"
            style="@style/Widget.Material3.Button.TonalButton"
            android:layout_width="72dp"
            android:layout_height="72dp"
            android:text="3"
            android:textSize="24sp"
            android:layout_marginStart="16dp"
            app:cornerRadius="36dp"
            app:layout_constraintTop_toTopOf="@id/btn2"
            app:layout_constraintStart_toEndOf="@id/btn2" />

        <!-- Row 2 -->
        <com.google.android.material.button.MaterialButton
            android:id="@+id/btn4"
            style="@style/Widget.Material3.Button.TonalButton"
            android:layout_width="72dp"
            android:layout_height="72dp"
            android:text="4"
            android:textSize="24sp"
            android:layout_marginTop="16dp"
            app:cornerRadius="36dp"
            app:layout_constraintTop_toBottomOf="@id/btn1"
            app:layout_constraintStart_toStartOf="@id/btn1" />

        <com.google.android.material.button.MaterialButton
            android:id="@+id/btn5"
            style="@style/Widget.Material3.Button.TonalButton"
            android:layout_width="72dp"
            android:layout_height="72dp"
            android:text="5"
            android:textSize="24sp"
            android:layout_marginStart="16dp"
            app:cornerRadius="36dp"
            app:layout_constraintTop_toTopOf="@id/btn4"
            app:layout_constraintStart_toEndOf="@id/btn4" />

        <com.google.android.material.button.MaterialButton
            android:id="@+id/btn6"
            style="@style/Widget.Material3.Button.TonalButton"
            android:layout_width="72dp"
            android:layout_height="72dp"
            android:text="6"
            android:textSize="24sp"
            android:layout_marginStart="16dp"
            app:cornerRadius="36dp"
            app:layout_constraintTop_toTopOf="@id/btn5"
            app:layout_constraintStart_toEndOf="@id/btn5" />

        <!-- Row 3 -->
        <com.google.android.material.button.MaterialButton
            android:id="@+id/btn7"
            style="@style/Widget.Material3.Button.TonalButton"
            android:layout_width="72dp"
            android:layout_height="72dp"
            android:text="7"
            android:textSize="24sp"
            android:layout_marginTop="16dp"
            app:cornerRadius="36dp"
            app:layout_constraintTop_toBottomOf="@id/btn4"
            app:layout_constraintStart_toStartOf="@id/btn4" />

        <com.google.android.material.button.MaterialButton
            android:id="@+id/btn8"
            style="@style/Widget.Material3.Button.TonalButton"
            android:layout_width="72dp"
            android:layout_height="72dp"
            android:text="8"
            android:textSize="24sp"
            android:layout_marginStart="16dp"
            app:cornerRadius="36dp"
            app:layout_constraintTop_toTopOf="@id/btn7"
            app:layout_constraintStart_toEndOf="@id/btn7" />

        <com.google.android.material.button.MaterialButton
            android:id="@+id/btn9"
            style="@style/Widget.Material3.Button.TonalButton"
            android:layout_width="72dp"
            android:layout_height="72dp"
            android:text="9"
            android:textSize="24sp"
            android:layout_marginStart="16dp"
            app:cornerRadius="36dp"
            app:layout_constraintTop_toTopOf="@id/btn8"
            app:layout_constraintStart_toEndOf="@id/btn8" />

        <!-- Row 4 -->
        <com.google.android.material.button.MaterialButton
            android:id="@+id/btnBackspace"
            style="@style/Widget.Material3.Button.TextButton"
            android:layout_width="72dp"
            android:layout_height="72dp"
            android:text="⌫"
            android:textSize="24sp"
            android:layout_marginTop="16dp"
            app:cornerRadius="36dp"
            app:layout_constraintTop_toBottomOf="@id/btn7"
            app:layout_constraintStart_toStartOf="@id/btn7" />

        <com.google.android.material.button.MaterialButton
            android:id="@+id/btn0"
            style="@style/Widget.Material3.Button.TonalButton"
            android:layout_width="72dp"
            android:layout_height="72dp"
            android:text="0"
            android:textSize="24sp"
            android:layout_marginStart="16dp"
            app:cornerRadius="36dp"
            app:layout_constraintTop_toTopOf="@id/btnBackspace"
            app:layout_constraintStart_toEndOf="@id/btnBackspace" />

    </androidx.constraintlayout.widget.ConstraintLayout>

</androidx.constraintlayout.widget.ConstraintLayout>
